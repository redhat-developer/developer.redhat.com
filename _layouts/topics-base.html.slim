---
layout: technology-base
---

- page.title = "Red Hat Developers Topic: #{page.solution.name}"

section(class="topics-header #{page.solution.id}")
  .row
    .large-24
      h2 #{page.solution.name}
      h4#topic #{page.solution.long_description}

// Static promotional items
section.topics-dotted-graphics 
  .row.topics-main
    .large-6.columns.right
      
      - page.solution.right_side_promo.each do |e|
        .right-side-promo
          .row
            .large-24.columns
              h4 #{e.title}
            .large-24.medium-8.columns
              - if e.section_1
                h5 #{e.section_1.title}
                - if e.section_1.sub_title
                  h6 #{e.section_1.sub_title}
                - if e.section_1.links
                  ul
                    - e.section_1.links.each do |link|
                      li
                        - if link.local_url
                          a(href="#{site.base_url}#{link.local_url}") #{link.name}
                        - elsif link.url
                          a(href="#{link.url}") #{link.name}
              a.button(href='#{site.base_url}#{e.button.url}') #{e.button.label}
            .large-24.medium-8.columns  
              - if e.section_2
                h5 #{e.section_2.title}
                ul
                  - e.section_2.links.each do |link|
                    li
                      - if link.local_url
                        a(href="#{site.base_url}#{link.local_url}") #{link.name}
                      - elsif link.url 
                        a(href="#{link.url}") #{link.name}
            .large-24.medium-8.columns  
              - if e.section_3
                h5 #{e.section_3.title}
                ul
                  - e.section_3.links.each do |link|
                    li
                      - if link.local_url
                        a(href="#{site.base_url}#{link.local_url}") #{link.name}
                      - elsif link.url 
                        a(href="#{link.url}") #{link.name}
            .large-24.medium-8.columns  
              - if e.section_4
                - if e.section_4.title
                  h5 #{e.section_4.title}
                ul.sec-4-links
                  - e.section_4.links.each do |link|
                    li
                      - if link.local_url
                        a(href="#{site.base_url}#{link.local_url}") #{link.name}
                      - elsif link.url 
                        a(href="#{link.url}") #{link.name}
    .large-18.columns
      .row
        // Main promotional item
        .medium-16.columns
          div(class="main-promo #{page.solution.id}")
            - page.solution.primary_promo.each do |a|
              span
                h3 #{a.title}
                p.description #{a.description} 
                span.promo-tags
                  .promo-tags-label Tags:
                  ul
                    - a.tags.each do |tag|
                      li #{tag}
              .row.promo-links
                - if a.links
                  - a.links.each do |link|
                    .large-8.columns
                      - if link.local_url
                        a(href="#{site.base_url}#{link.local_url}") #{link.name}
                      - elsif link.url
                        a(href="#{link.url}") #{link.name}           

        // Secondary promotional item
        .medium-8.columns
          - page.solution.secondary_promo.each do |b|
            - if b.local_url
              - promo_url = (site.base_url + "/" + b.local_url)
            - else
              - promo_url = b.url
            a(href="#{promo_url}")
              .secondary-promo
                h4 #{b.title}
                p #{b.description}
                span.promo-tags
                  .promo-tags-label Tags:
                  ul
                    - b.tags.each do |tag|
                      li #{tag}
      .row
        // Tertiary promotional items (Two rows of three items)
        .large-8.columns
          - page.solution.tertiary_tall_promo.each do |c|
            - if c.local_url
              - promo_url = (site.base_url + "/" + c.local_url)
            - else
              - promo_url = c.url
            a(href="#{promo_url}")
              .tertiary-tall-promo
                h4 #{c.title}
                p #{c.description}
                span.promo-tags
                  .promo-tags-label Tags:
                  ul
                    - c.tags.each do |tag|
                      li #{tag}   

        .large-16.columns
          .row
            - page.solution.tertiary_promo.each do |d|
              .large-12.columns
                - if d.local_url
                  - promo_url = (site.base_url + "/" + d.local_url)
                - else
                  - promo_url = d.url
                a(href="#{promo_url}")
                  .tertiary-promo
                    h5 #{d.title}
                    p #{d.description}
                    span.promo-tags
                      .promo-tags-label Tags:
                      ul
                        - d.tags.each do |tag|
                          li #{tag}                       

  .row#topic-resources(data-tags="#{JSON.dump(page.solution.tags).gsub(/"/, "'")}")
    ul.topic-resources.topic-resources-list.small-block-grid-1.medium-block-grid-2.large-block-grid-4

= javascripts("solutions", true) do
  script src="#{site.base_url}/javascripts/vendor/chosen.jquery.min.js"
