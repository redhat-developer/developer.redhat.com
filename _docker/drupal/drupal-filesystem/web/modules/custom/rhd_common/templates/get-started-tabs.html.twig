<div id="get-started-instructions" class="tthw-steps" data-spy="scroll" data-target="#steps-scroll">
    <div class="large-24 columns tabs-content full-width-content">
        {% for tab in tabs %}
            {% set active_tab = loop.first ? ' active' : '' %}
            {% set hidden_tab = loop.first ? 'false' : 'true' %}
            <section class="content{{ active_tab }}" role="tabpanel" id="{{ tab.title|replace({' ': ''})|lower }}"
                     aria-hidden="{{ hidden_tab }}">
                {% if tab.sections|length > 1 %}
                    {% set box_size = 24 / (tab.sections|length) %}
                    <div class="row" data-equalizer="">
                        {% for section in tab.sections %}
                            <div class="large-{{ box_size }} columns step-cards" data-equalizer-watch="">
                                <a class="card" href="#{{ tab.title|replace({' ': ''})|lower }}-{{ section.title|replace({' ': ''})|lower }}">
                                    <div class="row">
                                        <div class="small-4 large-4 columns">
                                            <h2 class="step-num">{{ loop.index }}.</h2>
                                        </div>
                                        <div class="small-20 large-20 columns">
                                            <h4>{{ section.title }}</h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="large-24 columns">
                                            <i class="fa fa-clock-o">
                                                <div class="paragraph">
                                                    <p>
                                                        {{ section.minutes }} {{ 'minutes'|t }}
                                                    </p>
                                                </div>
                                            </i>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                {% if tab.preamble|render|striptags|trim is not empty %}
                    {{ tab.preamble }}
                {% endif %}
                <div class="get-started-content row">
                    <div class="large-24 columns">
                        {% for section in tab.sections %}
                            {% if tab.sections|length > 1 %}
                            <div class="step-header">
                                <h4 id="{{ tab.title|replace({' ': ''})|lower }}-{{ section.title|replace({' ': ''})|lower }}"><span
                                            class="step-num">{{ loop.index }}.</span> {{ section.title }}</h4>
                                <span class="duration"><i class="fa fa-clock-o"><span class="paragraph">
                                    <p>{{ section.minutes }} minutes</p>
                                    </span></i></span>
                            </div>
                            {% endif %}
                            <div class="step-content">{{ section.body }}</div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endfor %}
    </div>
</div>
