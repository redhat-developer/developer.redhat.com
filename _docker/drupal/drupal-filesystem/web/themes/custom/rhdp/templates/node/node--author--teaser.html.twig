{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ content.field_headshot }}

  <div{{ content_attributes.addClass('node__content') }}>
    <h5>{{ label }}</h5>
    {{ content|without('field_headshot', 'social_icons') }}
    {% if content.social_icons|length %}
      <ul class="social-icons">
        {% for social_icon in content.social_icons %}
          <li class="social-icon {{ social_icon.field|raw }}">
            <a href="{{ social_icon.value|raw }}">{{ social_icon.field|raw }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>

</article>
