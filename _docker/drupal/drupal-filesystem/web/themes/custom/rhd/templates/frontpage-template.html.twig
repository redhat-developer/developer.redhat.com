<section class="homepage-main">
    <div class="row">
        <div class="large-24 columns homepage-cta">
            {{ content.hero }}
    </div>
</section>

<div class="spotlights-wrap">
    <div class="row">
        <div class="large-24">
            <div class="spotlights-container">{{ content.spotlights }}</div>
        </div>
    </div>
</div>

<div class="row featured-and-latest">
    <div class="large-24 columns">
        <h3 class="caps">Cool Stuff You Should Know...</h3>
    </div>

    <div class="medium-12 columns">
        {{ content.main }}

        <h4 class="caps">Featured Content</h4>

        {{ content.featured }}
    </div>

    <div class="medium-12 columns">
        <h4 class="caps">Latest Content</h4>

        <ul class="homepage-resources homepage-resources-latest">
        </ul>
    </div>
</div>

