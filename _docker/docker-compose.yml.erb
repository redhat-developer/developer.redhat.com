version: '2'
services:
  awestruct_unit_tests:
    build: ./awestruct
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    environment:
      - ghprbActualCommit
      - github_status_api_token
      - BUILD_URL
      - RHD_DRIVER

  awestruct_acceptance_test:
    build: ./awestruct
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    links:
      - selhub:hub
    environment:
      - ghprbActualCommit
      - github_status_api_token
      - PARALLEL_TEST
      - CUCUMBER_TAGS
      - SELENIUM_HOST=http://hub:4444/wd/hub
      - RHD_JS_DRIVER
      - RHD_DOCKER_DRIVER
      - BUILD_URL
      - RHD_TEST_PROFILE

  awestruct_preview_no_reload:
    build: ./awestruct
    command:
      - "rake git_setup clean preview_no_reload[docker]"
    ports:
      - "4242"
    links:
      - drupal
      - searchisko
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    environment:
      - google_api_key
      - dcp_user
      - dcp_password
      - vimeo_client_secret
      - vimeo_access_token_secret
      - vimeo_access_token
      - cache_password
      - cache_url
      - site_base_path
      - site_path_suffix
      - cdn_prefix
      - cache_user
      - github_token
      - drupal_user
      - drupal_password
      - ACCESSIBLE_SLAVE_IP
      - SEARCHISKO_HOST_PORT
      - DRUPAL_HOST_PORT
      - DRUPAL_HOST_IP

  awestruct:
    build: ./awestruct
    command:
      - "rake git_setup clean preview[docker]"
<% unless ENV['JENKINS_HOME'] %>
    ports:
      - "4242:4242"
<% end %>
    links:
      - drupal
      - searchisko
    volumes:
      - ../:/home/awestruct/developer.redhat.com
      - ./awestruct/overlay/ssh-key:/home/awestruct/.ssh
    environment:
      - google_api_key
      - dcp_user
      - dcp_password
      - vimeo_client_secret
      - vimeo_access_token_secret
      - vimeo_access_token
      - cache_password
      - cache_url
      - site_base_path
      - site_path_suffix
      - cdn_prefix
      - cache_user
      - github_token
      - drupal_user
      - drupal_password
      - ACCESSIBLE_SLAVE_IP
      - SEARCHISKO_HOST_PORT
      - DRUPAL_HOST_PORT
      - DRUPAL_HOST_IP
      - ghprbActualCommit
      - github_status_api_token
      - BUILD_URL
      <% if ENV['AWE_PROC_COUNT'].to_s != "" %>
      - AWE_PROC_COUNT
      <% end %>

  drupal:
    build: ./drupal
    expose:
      - "80"
    ports:
      - "80"
    links:
      - drupalmysql
    volumes:
      - ../images:/var/www/html/images
      - ../stylesheets/fonts:/var/www/html/fonts
    <% unless ENV['JENKINS_HOME'] %>
      - ./drupal/themes/:/var/www/html/themes
      - ./drupal/modules/custom/:/var/www/html/modules/custom
    <% end %>
    environment:
      - DB_NAME=drupal
      # TODO: We could probably take these out and move them to secrets.yml.gpg if they aren't there already
      - DB_USER=drupal
      - DB_PASSWORD=drupal

  drupalmysql:
    image: mariadb:10.0.15
    environment:
      - MYSQL_USER=drupal
      - MYSQL_PASSWORD=drupal
      - MYSQL_DATABASE=drupal
      - MYSQL_ROOT_PASSWORD=superdupersecret
    expose:
      - "3306"

  mysql:
    build: mysql
    volumes:
      - ./mysql:/etc/mysql/conf.d
    environment:
      - MYSQL_DATABASE=searchisko
      - MYSQL_USER=searchisko
      - MYSQL_PASSWORD=searchisko
      - MYSQL_ROOT_PASSWORD=superdupersecret
    expose:
      - "3306"

  searchisko:
    build: ./searchisko
    expose:
     - "8080"
    ports:
     - "8080"
    environment:
      - DB_NAME=searchisko
      - DB_USER=searchisko
      - DB_PASSWORD=searchisko
    links:
     - mysql

  #
  # Environment actions
  #
  backup:
    build: ./awestruct
    entrypoint: ruby _docker/lib/backup/backup.rb
    volumes:
     - ../:/home/awestruct/developer.redhat.com
     - /data/drupal:/drupal
     - /git/backups:/backups
     - /credentials/db/my.cnf:/home/awestruct/.my.cnf
     - /credentials/git/backups/netrc:/home/awestruct/.netrc

  #
  # Testing infrastructure
  #
  selhub:
    image: selenium/hub
    restart: always
    expose:
      - "4444"
    ports:
      - "4444"
    privileged: true
    environment:
      - GRID_BROWSER_TIMEOUT=100000
      - GRID_TIMEOUT=90000

  docker_firefox:
    image: selenium/node-firefox
    links:
     - selhub:hub

  docker_chrome:
    image: selenium/node-chrome
    volumes:
    - /dev/shm:/dev/shm
    links:
     - selhub:hub
    environment:
     - HUB_PORT_4444_TCP_ADDR=selhub
     - DBUS_SESSION_BUS_ADDRESS=/dev/null

