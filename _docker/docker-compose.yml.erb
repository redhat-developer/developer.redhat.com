awestruct_unit_tests:
  build: ./awestruct
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  volumes:
    - ../:/home/awestruct/developer.redhat.com

awestruct_acceptance_remote_host:
  build: ./awestruct
  command:
     - /home/awestruct/developer.redhat.com/_cucumber/docker_run.sh

  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  links:
    - selenium-<%=ENV['RHD_SELENIUM_DRIVER']%>:driver
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - "<%= ENV['HOST_TO_TEST']%>"
    - SELENIUM_HOST=http://driver:4444/wd/hub

awestruct_acceptance_docker_internal:
  build: ./awestruct
  command:
     - /home/awestruct/developer.redhat.com/_cucumber/docker_run.sh
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  links:
    - awestruct_preview_no_reload:docker
    - selenium-<%=ENV['RHD_SELENIUM_DRIVER']%>:driver
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - HOST_TO_TEST=http://docker:<%=ENV['AWESTRUCT_HOST_PORT']%>
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - SELENIUM_HOST=http://driver:4444/wd/hub
    - RHD_SELENIUM_DRIVER
    - PARALLEL_TEST

awestruct_preview_no_reload:
  build: ./awestruct
  command:
    - "rake git_setup clean preview_no_reload[docker]"
  expose:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  ports:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  links:
    - drupal
    - searchisko
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - google_api_key
    - dcp_user
    - dcp_password
    - vimeo_client_secret
    - vimeo_access_token_secret
    - vimeo_access_token
    - cache_password
    - cache_url
    - site_base_path
    - site_path_suffix
    - cdn_prefix
    - cache_user
    - github_token
    - drupal_user
    - drupal_password
    - ACCESSIBLE_SLAVE_IP
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
    - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
    - DRUPAL_HOST_IP
    - HOST_TO_TEST

awestruct:
  build: ./awestruct
  command:
    - "rake git_setup clean preview[docker]"
  expose:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  ports:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  links:
    - drupal
    - searchisko
  volumes:
    - ../:/home/awestruct/developer.redhat.com
    - ./awestruct/overlay/ssh-key:/home/awestruct/.ssh
  environment:
    - google_api_key
    - dcp_user
    - dcp_password
    - vimeo_client_secret
    - vimeo_access_token_secret
    - vimeo_access_token
    - cache_password
    - cache_url
    - site_base_path
    - site_path_suffix
    - cdn_prefix
    - cache_user
    - github_token
    - drupal_user
    - drupal_password
    - ACCESSIBLE_SLAVE_IP
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
    - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
    - DRUPAL_HOST_IP
    - HOST_TO_TEST

drupal:
  build: ./drupal
  expose:
    - "80"
  ports:
    - "<%= ENV['DRUPAL_HOST_PORT'] %>:80"
  links:
    - drupalpgsql
  volumes:
    - ../_drupal/themes/:/var/www/html/themes
  #  - ../_drupal/scripts/:/drupal/bin
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=drupal
    # TODO: We could probably take these out and move them to secrets.yml.gpg if they aren't there already
    - DB_USER=drupal
    - DB_PASSWORD=drupal
drupalpgsql:
  image: postgres:9.4
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - POSTGRES_USER=drupal
    - POSTGRES_PASSWORD=drupal
  ports:
    - "<%= ENV['DRUPALPGSQL_HOST_PORT'] %>:5432"
  expose:
    - "5432"
mysql:
  image: mysql:5.6
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  volumes:
    - ./searchisko_configure:/etc/mysql/conf.d
  environment:
    - MYSQL_DATABASE=searchisko
    - MYSQL_USER=searchisko
    - MYSQL_PASSWORD=searchisko
    - MYSQL_ROOT_PASSWORD=superdupersecret
  ports:
    - "<%= ENV['MYSQL_HOST_PORT'] %>:3306"
searchisko:
  build: ./searchisko
  ports:
   - "<%= ENV['SEARCHISKO_HOST_PORT'] %>:8080"
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
searchiskoconfigure:
  build: ./searchisko_configure
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
   - searchisko

selenium-firefox:
  image: selenium/standalone-firefox
  expose:
    - "4444"
  links:
   - awestruct_preview_no_reload:docker

selenium-chrome:
  image: selenium/standalone-chrome:2.48.2
  expose:
    - "4444"
  links:
   - awestruct_preview_no_reload:docker
  volumes:
  - /dev/shm:/dev/shm

