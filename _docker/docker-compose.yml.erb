awestruct_acceptance:
  build: ./awestruct
  command:
     - /home/awestruct/developer.redhat.com/_cucumber/docker_run.sh
  links:
    - awestruct_preview_no_reload:docker
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - HOST_TO_TEST=http://docker:<%=ENV['AWESTRUCT_HOST_PORT']%>
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - ghprbActualCommit
    - github_status_api_token
    - BUILD_URL
awestruct_preview_no_reload:
  build: ./awestruct
  command:
    - "rake git_setup clean preview_no_reload[docker]"
  expose:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  ports:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  links:
    - drupal
    - searchisko
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - google_api_key
    - dcp_user
    - dcp_password
    - vimeo_client_secret
    - vimeo_access_token_secret
    - vimeo_access_token
    - cache_password
    - cache_url
    - site_base_path
    - site_path_suffix
    - cdn_prefix
    - cache_user
    - github_token
    - drupal_user
    - drupal_password
    - ACCESSIBLE_SLAVE_IP
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
    - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
    - DRUPAL_HOST_IP
    - HOST_TO_TEST
awestruct:
  build: ./awestruct
  command:
    - "rake git_setup clean preview[docker]"
  expose:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  ports:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
  links:
    - drupal
    - searchisko
  volumes:
    - ../:/home/awestruct/developer.redhat.com
    - ./awestruct/overlay/ssh-key:/home/awestruct/.ssh
  environment:
    - google_api_key
    - dcp_user
    - dcp_password
    - vimeo_client_secret
    - vimeo_access_token_secret
    - vimeo_access_token
    - cache_password
    - cache_url
    - site_base_path
    - site_path_suffix
    - cdn_prefix
    - cache_user
    - github_token
    - drupal_user
    - drupal_password
    - ACCESSIBLE_SLAVE_IP
    - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
    - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
    - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
    - DRUPAL_HOST_IP
    - HOST_TO_TEST
    - ghprbActualCommit
    - github_status_api_token
    - BUILD_URL
    <% if ENV['AWE_PROC_COUNT'].to_s != "" %>
    - AWE_PROC_COUNT
    <% end %>

drupal:
  build: ./drupal
  expose:
    - "80"
  ports:
    - "<%= ENV['DRUPAL_HOST_PORT'] %>:80"
  links:
    - drupalpgsql
  volumes:
    - ../_drupal/themes/:/var/www/html/themes
    - ../images:/tmp/images
    - ../stylesheets:/tmp/stylesheets
  #  - ../_drupal/scripts/:/drupal/bin
  environment:
    - DB_NAME=drupal
    # TODO: We could probably take these out and move them to secrets.yml.gpg if they aren't there already
    - DB_USER=drupal
    - DB_PASSWORD=drupal
drupalpgsql:
  image: postgres:9.4
  environment:
    - POSTGRES_USER=drupal
    - POSTGRES_PASSWORD=drupal
  ports:
    - "<%= ENV['DRUPALPGSQL_HOST_PORT'] %>:5432"
  expose:
    - "5432"
mysql:
  image: mysql:5.6
  volumes:
    - ./searchisko_configure:/etc/mysql/conf.d
  environment:
    - MYSQL_DATABASE=searchisko
    - MYSQL_USER=searchisko
    - MYSQL_PASSWORD=searchisko
    - MYSQL_ROOT_PASSWORD=superdupersecret
  ports:
    - "<%= ENV['MYSQL_HOST_PORT'] %>:3306"
searchisko:
  build: ./searchisko
  ports:
   - "<%= ENV['SEARCHISKO_HOST_PORT'] %>:8080"
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
searchiskoconfigure:
  build: ./searchisko_configure
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
   - searchisko
