      .large-24.columns
        h3.caps Meet the Red Hat Developer Team
        ul.small-block-grid-2.medium-block-grid-4.large-block-grid-6.msb-team-members
          - page.msbuild.each do |a|
            li
              - if a.photo
                img(src=cdn("#{site.base_url}/images/events/msbuild/#{a.photo}") alt='#{a.name}')
              span
                p.name #{a.name}
                - if a.title
                  p.title #{a.title}
